# ==================================================
# ライフサイクルポリシー設定
# ==================================================

# ライフサイクルポリシーを有効にするか
enable_lifecycle_policy = true

# タグなしイメージの保持数
untagged_image_count_limit = 5

# タグ付きイメージの保持数
tagged_image_count_limit = 10

# イメージの保持期間（日）
image_age_limit_days = 30

