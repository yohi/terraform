# ==================================================
# 基本設定
# ==================================================

# AWSリージョン
aws_region = "ap-northeast-1"

# プロジェクト名
project = "my-project"

# 環境名
env = "dev"

# アプリケーション名（オプション）
app = "web"

# 共通タグ
common_tags = {
  Project     = "my-project"
  Environment = "dev"
  Owner       = "team-name"
  Terraform   = "true"
}

# ==================================================
# 単一ECRリポジトリ設定
# ==================================================

# ECRリポジトリ名（オプション - 指定しない場合は "${project}-${env}-${app}" で自動生成）
# repository_name = "my-custom-repository"

# イメージタグの変更可能性
image_tag_mutability = "MUTABLE"

# プッシュ時にイメージスキャンを実行するか
scan_on_push = true

# 暗号化タイプ
encryption_type = "AES256"

# KMS暗号化キーID（encryption_type=KMSの場合に指定）
# kms_key_id = "alias/my-ecr-key"

# ==================================================
# 複数ECRリポジトリ設定（代替案）
# ==================================================

# 複数のECRリポジトリを作成する場合
